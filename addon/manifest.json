{
    "manifest_version": 2,
    "name": "MediaBlock",
    "description": "Hide images and videos on sites except those on the (managed) whitelist.",
    "version": "0.5.1",

    "icons": { "192": "icon.png" },

    "permissions": [
        "tabs",
        "storage"
    ],

    "content_scripts": [ {
        "matches": ["<all_urls>"],
        "all_frames": true,
        "js": ["blockif.js"]
    } ],

    "storage": {
        "managed_schema": "schema.json"
    }
}
