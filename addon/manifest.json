{
    "manifest_version": 2,
    "name": "Good Company",
    "description": "If a page is Good Company, show its graphics. Else, block images on all other Pages.",
    "version": "0.5.1",

    "icons": { "192": "images/baseline_thumbs_up_down_black_48dp.png" },

    "permissions": [
        "tabs",
        "storage"
    ],

    "content_scripts": [ {
        "matches": ["<all_urls>"],
        "all_frames": true,
        "js": ["blockif.js"]
    } ],

    "storage": {
        "managed_schema": "schema.json"
    }
}
