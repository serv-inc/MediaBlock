{
  "name": "MediaBlock",
  "version": "1.0.0",
  "description": "* Good Company If a page is Good Company (TM), show its graphics.",
  "scripts": {
    "dev:background": "watchify src/browserify/background.js -r ./src/browserify/whitelist.js --exclude './message.js' -o addon/background.js",
    "dev:popup": "babel --watch src/react --out-dir addon/popup --presets react-app/prod",
    "lint": "eslint **/*.jsx src/*/*.js",
    "pretty": "prettier --write .eslintrc.js addon/manifest.json **/*.js **/*.jsx",
    "prod:background": "browserify src/browserify/background.js -r ./src/browserify/whitelist.js -o addon/background.js",
    "setup": "bower install  # see also Makefile",
    "test": "npm run lint && npm run unittest",
    "unittest": "mocha",
    "start:firefox": "web-ext run --source-dir addon --url 'localhost:8000' --url 'about:devtools-toolbox?type=extension&id=%40good-co' -- --safe-mode"
  },
  "repository": "git+https://github.com/serv-inc/MediaBlock.git",
  "keywords": [],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/serv-inc/MediaBlock/issues"
  },
  "homepage": "https://github.com/serv-inc/MediaBlock#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-react-app": "^3.1.2",
    "bower": "^1.8.8",
    "browserify": "^17.0.0",
    "chai": "^4.2.0",
    "esbuild": "^0.7.16",
    "eslint": "^7.1.0",
    "eslint-plugin-react": "^7.20.0",
    "mocha": "^8.2.0",
    "prettier": "2.0.5",
    "watchify": "^3.11.1",
    "web-ext": "^5.2.0"
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "private": false
}
